<%= form_for(@new_media) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="field">
      <%= f.text_area :description , placeholder: "Compose new media..." %>
    </div>
    <div class="field">
      <%= f.text_area :url , placeholder: "Youtube or Image link" %>
    </div>
    <%= check_box('permission', false) %>

    <%= f.submit "Post", class: "btn btn-large btn-primary" %>

<% end %>