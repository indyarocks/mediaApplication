<%= provide(:title, @user.first_name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= "#{@user.first_name} #{@user.last_name}"%>
      </h1>
    </section>
    <section>
      <%= render 'shared/media_form', locals: {media: @new_media} %>
    </section>
    <span> Total Posts:
    <%= pluralize(current_user.medias.count, "media") %>
    </span>
  </aside>
  <div class="searchBar">
    <form action="<%= user_path(@user) %>" method="GET">
      Search Post: <input type="text" name="q" style="width: 200px;" />
    </form>
  </div>
  <div class="span8">
    <% if @user.medias.any? %>
        <ol class="media">
          <%= render 'shared/medias', locals: {medias: @medias} %>
        </ol>
        <%= will_paginate(@medias) %>
    <% end %>
  </div>
</div>

